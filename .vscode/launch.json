{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "npm start",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/npm/bin/npm-cli.js",
            "cwd": "${workspaceFolder}",
            "args": ["run", "start"]
        },
        {
            "name": "Python: Whole Application",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/agent.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "npm start + Python Whole Application",
            "configurations": ["npm start", "Python: Whole Application"]
        }
    ]
}

